<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewExam_Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/exam_activity_start_margin"
            android:layout_marginTop="40dp"
            android:textSize="@dimen/font_size"
            android:text="Exam Type ---" />

        <TextView
            android:id="@+id/textViewViewExamTypeOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/report_activity_output_start_margin"
            android:layout_marginTop="40dp"
            android:textSize="@dimen/font_size"
            android:text="Output" />

        <TextView
            android:id="@+id/textViewCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/exam_activity_start_margin"
            android:layout_marginTop="80dp"
            android:textSize="@dimen/font_size"
            android:text="Course ---" />

        <TextView
            android:id="@+id/textViewCourseOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/report_activity_output_start_margin"
            android:layout_marginTop="80dp"
            android:text="Output"
            android:textSize="@dimen/font_size" />

        <TextView
            android:id="@+id/textViewLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/exam_activity_start_margin"
            android:layout_marginTop="120dp"
            android:textSize="@dimen/font_size"
            android:text="Level ---" />

        <TextView
            android:id="@+id/textViewLevelOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/report_activity_output_start_margin"
            android:layout_marginTop="120dp"
            android:textSize="@dimen/font_size"
            android:text="Output" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/exam_activity_start_margin"
            android:layout_marginTop="160dp"
            android:textSize="@dimen/font_size"
            android:text="Date ---" />

        <TextView
            android:id="@+id/textViewDateOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/report_activity_output_start_margin"
            android:layout_marginTop="160dp"
            android:textSize="@dimen/font_size"
            android:text="Output" />

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/exam_activity_start_margin"
            android:layout_marginTop="200dp"
            android:textSize="@dimen/font_size"
            android:text="Time ---" />

        <TextView
            android:id="@+id/textViewTimeOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/report_activity_output_start_margin"
            android:layout_marginTop="200dp"
            android:textSize="@dimen/font_size"
            android:text="OutPut" />

        <TextView
            android:id="@+id/textViewTotalQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/exam_activity_start_margin"
            android:layout_marginTop="240dp"
            android:textSize="@dimen/font_size"
            android:text="Total Question ---" />

        <TextView
            android:id="@+id/textViewTotalQuestionOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/report_activity_output_start_margin"
            android:layout_marginTop="240dp"
            android:textSize="@dimen/font_size"
            android:text="Output" />

        <TextView
            android:id="@+id/textViewAttempt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/exam_activity_start_margin"
            android:layout_marginTop="280dp"
            android:textSize="@dimen/font_size"
            android:text="Attempt ---" />

        <TextView
            android:id="@+id/textViewAttemptOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="280dp"
            android:layout_marginStart="@dimen/report_activity_output_start_margin"
            android:textSize="@dimen/font_size"
            android:text="Output" />

        <TextView
            android:id="@+id/textViewRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/exam_activity_start_margin"
            android:layout_marginTop="320dp"
            android:textSize="@dimen/font_size"
            android:text="Right ---" />

        <TextView
            android:id="@+id/textViewRightOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="320dp"
            android:layout_marginStart="@dimen/report_activity_output_start_margin"
            android:textSize="@dimen/font_size"
            android:text="Output" />

        <TextView
            android:id="@+id/textViewWrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/exam_activity_start_margin"
            android:layout_marginTop="360dp"
            android:textSize="@dimen/font_size"
            android:text="Wrong ---" />

        <TextView
            android:id="@+id/textViewWrongutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="360dp"
            android:layout_marginStart="@dimen/report_activity_output_start_margin"
            android:textSize="@dimen/font_size"
            android:text="Output" />

        <TextView
            android:id="@+id/textViewTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/exam_activity_start_margin"
            android:layout_marginTop="400dp"
            android:textSize="@dimen/font_size"
            android:text="Total ---" />

        <TextView
            android:id="@+id/textViewTotalOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="400dp"
            android:layout_marginStart="@dimen/report_activity_output_start_margin"
            android:textSize="@dimen/font_size"
            android:text="Output" />

    </RelativeLayout>
</ScrollView>