<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textStudentname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Student Name :"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/editStudentname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textSize="@dimen/font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textRollno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Roll No :"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/editRollno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:numeric="integer"
                android:singleLine="true"
                android:textSize="@dimen/font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textCourseName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Course Name :"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <Spinner
                android:id="@+id/spinnerCourseName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="@dimen/font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textCourseLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Course Level :"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <Spinner
                android:id="@+id/spinnerCourseLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="@dimen/font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAdmissionDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Admission Date :"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="left"
            android:orientation="horizontal">

            <DatePicker
                android:id="@+id/dateAdmissionDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:gravity="left"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textDateOfBirth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Date of Birth :"
                android:textSize="@dimen/font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="left"
            android:orientation="horizontal">

            <DatePicker
                android:id="@+id/dateDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:gravity="left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textSex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Sex :"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <Spinner
                android:id="@+id/spinnerSex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="@dimen/font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textFatherName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Name of Father:"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/editFatherName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textSize="@dimen/font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textResidentialAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Residential Address:"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/editResidentialAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textSize="@dimen/font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textOccupation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Occupation:"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/editOccupation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textSize="@dimen/font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textMotherName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Name of Mother:"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/editMotherName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textSize="@dimen/font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textMobileNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Mobile Number:"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/editMobileNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:numeric="integer"
                android:singleLine="true"
                android:textSize="@dimen/font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Email:"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textSize="@dimen/font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textSchoolName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Name of School:"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/editSchoolName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textSize="@dimen/font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textStandard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Standard:"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/editStandard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textSize="@dimen/font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="User Name:"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/editUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textSize="@dimen/font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/exam_activity_start_margin"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Password:"
                android:textColor="@color/colorFont"
                android:textSize="@dimen/font_size" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="@dimen/font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:onClick="OnClickSend"
                android:text="Send"
                android:textSize="@dimen/font_size" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
