<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamActivity"
    android:background="@drawable/rounded_bg"
    android:layout_margin="5dip">

    <TextView
        android:id="@+id/textQuestionNumber"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/exam_activity_start_margin"
        android:layout_marginTop="33dp"
        android:text="1/10"
        android:textColor="@color/colorGrey" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textQuestionNumber"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/font_size"
        tools:text="@tools:sample/date/hhmm" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="143dp"
        android:layout_height="113dp"
        android:layout_alignTop="@+id/textQuestionNumber"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-34dp"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@+id/textTime"
        android:layout_toEndOf="@+id/textQuestionNumber"
        app:srcCompat="@drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/Question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/exam_activity_start_margin"
        android:layout_marginTop="151dp"
        android:inputType="textMultiLine"
        android:longClickable="false"
        android:text="1. Hello, Dies ist ein Beispielsatz. 2. Dies ist der zweite Satz."
        android:textSize="20dp"
        android:textColor="@color/colorGrey"/>

    <RadioGroup
        android:id="@+id/RGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dip"
        android:layout_marginBottom="169dip">

        <RadioButton
            android:id="@+id/radioAnsFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANS 1"
            android:textColor="@color/colorGrey"
            android:backgroundTint="@color/colorWhite"
            android:foregroundTint="@color/colorWhite"/>

        <RadioButton
            android:id="@+id/radioAnsSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANS 2"
            android:textColor="@color/colorGrey"

            android:backgroundTint="@color/colorWhite"
            android:foregroundTint="@color/colorWhite"/>

        <RadioButton
            android:id="@+id/radioAnsThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANS 3"
            android:textColor="@color/colorGrey"/>

        <RadioButton
            android:id="@+id/radioAnsFourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANS 4"
            android:textColor="@color/colorGrey"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/imageView2"
        android:onClick="OnClickPrev"
        android:text="Prev" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-108dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/imageView2"
        android:onClick="OnClickSave"
        android:text="Save" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-229dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/imageView2"
        android:onClick="OnClickNext"
        android:text="Next" />


</RelativeLayout>