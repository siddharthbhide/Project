<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamActivity">

    <TextView
        android:id="@+id/textQuestionNumber"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/exam_activity_start_margin"
        android:layout_marginTop="33dp"
        android:text="1/10"
        android:textColor="@color/colorFont" />
    <TextView
        android:id="@+id/textTime"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textQuestionNumber"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        tools:text="@tools:sample/date/hhmm"
        android:textSize="@dimen/font_size"
        android:textColor="@color/colorFont"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="143dp"
        android:layout_height="113dp"
        android:layout_alignTop="@+id/textQuestionNumber"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-34dp"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@+id/textTime"
        android:layout_toEndOf="@+id/textQuestionNumber"
        app:srcCompat="@drawable/ic_menu_camera" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="151dp"
        android:inputType="textMultiLine"
        android:longClickable="false"
        android:text="1. Hello, Dies ist ein Beispielsatz. 2. Dies ist der zweite Satz."
        android:layout_marginStart="@dimen/exam_activity_start_margin"
        android:textSize="20dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textQuestionNumber"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="224dp"/>

    <RadioButton
        android:id="@+id/radioAnsFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/exam_activity_start_margin"
        android:layout_marginBottom="223dp"
        android:text="ANS 1" />

    <RadioButton
        android:id="@+id/radioAnsSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/exam_activity_start_margin"
        android:layout_marginBottom="171dp"
        android:text="ANS 2" />

    <RadioButton
        android:id="@+id/radioAnsThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/exam_activity_start_margin"
        android:layout_marginBottom="122dp"
        android:text="ANS 3" />

    <RadioButton
        android:id="@+id/radioAnsFourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/exam_activity_start_margin"
        android:layout_marginBottom="122dp"
        android:text="ANS 4" />

    <Button
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/imageView2"
        android:text="Prev" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-108dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/imageView2"
        android:text="Save"
        android:onClick="OnClickSave"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-229dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/imageView2"
        android:text="Next" />



</RelativeLayout>